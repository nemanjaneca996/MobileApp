                                         HorizontalOptions="Center"
                                         BindableLayout.ItemsSource="{Binding ShoppingCart.PreparedAir.ListSegments}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
