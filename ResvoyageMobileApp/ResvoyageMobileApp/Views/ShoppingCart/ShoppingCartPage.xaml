                <pv:PancakeView BackgroundColor="White"
                                HasShadow="True"
                                Padding="10"
                                CornerRadius="10"
                                VerticalOptions="FillAndExpand">
                    <StackLayout Orientation="Vertical">
                        <Label Text="Who's traveling?" Style="{StaticResource labelLargeBlack}" HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label Text="Traveler 1" Style="{StaticResource labelMediumBlack}" FontAttributes="Bold"/>
                        <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                            <Picker ItemsSource="{Binding PassengerTitle}" SelectedItem="{Binding PassengerInfo.Title, Mode=TwoWay}" Title="Title*" TitleColor="Gray"/>
                        </forms:Frame2>
                        <StackLayout Orientation="Horizontal" BindableLayout.ItemsSource="{Binding PassengerGender}" >
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Text="{Binding Name}" 
                                                     IsChecked="{Binding IsSelected}" 
                                                     TextColor="Black" Font="14" 
                                                     Padding="0,5" 
                                                     Command="{Binding BindingContext.ChangedGender, Source={x:Reference ShoppingCart}}" 
                                                     CommandParameter="{Binding Name}"/>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                        <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                            <Entry Text="{Binding PassengerInfo.FirstName, Mode=TwoWay}" Placeholder="First Name*" PlaceholderColor="Gray"/>
                        </forms:Frame2>
                        <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                            <Entry Text="{Binding PassengerInfo.MiddleName, Mode=TwoWay}" Placeholder="Middle Name" PlaceholderColor="Gray"/>
                        </forms:Frame2>
                        <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                            <Entry Text="{Binding PassengerInfo.LastName, Mode=TwoWay}" Placeholder="Last Name*" PlaceholderColor="Gray"/>
                        </forms:Frame2>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                                <Picker ItemsSource="{Binding Days}" SelectedItem="{Binding PaymentDetails.CardInfo.Day, Mode=TwoWay}" Title="Day of birth*" TitleColor="Gray"/>
                            </forms:Frame2>
                            <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5" Grid.Column="1">
                                <Picker ItemsSource="{Binding Months}" SelectedItem="{Binding PaymentDetails.CardInfo.Month, Mode=TwoWay}" Title="Month of birth*" TitleColor="Gray" />
                            </forms:Frame2>
                        </Grid>
                        <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                            <Picker ItemsSource="{Binding Years}" SelectedItem="{Binding PaymentDetails.CardInfo.Year, Mode=TwoWay}" Title="Year of birth*" TitleColor="Gray"/>
                        </forms:Frame2>
                        <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                            <Entry Text="{Binding PassengerInfo.Email, Mode=TwoWay}" Placeholder="Email*" PlaceholderColor="Gray" Keyboard="Email" Grid.Row="6"/>
                        </forms:Frame2>
                        <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                            <Entry Text="{Binding PassengerInfo.Phone, Mode=TwoWay}" Placeholder="Phone number*" Grid.Row="7" PlaceholderColor="Gray" Keyboard="Telephone"/>
                        </forms:Frame2>
                    </StackLayout>
                </pv:PancakeView>
                <pv:PancakeView BackgroundColor="White"
                                HasShadow="True"
                                Padding="10"
                                CornerRadius="10"
                                VerticalOptions="FillAndExpand">
                    <StackLayout Orientation="Vertical">
                        <Label Text="Card Info" Style="{StaticResource labelLargeBlack}" HorizontalOptions="Center" VerticalOptions="Center"/>

                        <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                            <Entry Text="{Binding PaymentDetails.CardInfo.CardholderName, Mode=TwoWay}" Placeholder="Cardholder Name*" PlaceholderColor="Gray"/>
                        </forms:Frame2>
                        <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                            <Entry Text="{Binding PaymentDetails.CardInfo.CardNumber, Mode=TwoWay}" Placeholder="Card Number*" MaxLength="16" Keyboard="Numeric" PlaceholderColor="Gray" Grid.Row="1"/>
                        </forms:Frame2>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                                <Picker ItemsSource="{Binding ExpirationMonths}" SelectedItem="{Binding PaymentDetails.CardInfo.ExpirationMonth, Mode=TwoWay}" Title="Exp. Month" TitleColor="Gray"/>
                            </forms:Frame2>
                            <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5" Grid.Column="1">
                                <Picker ItemsSource="{Binding ExpirationYears}" SelectedItem="{Binding PaymentDetails.CardInfo.ExpirationYear, Mode=TwoWay}" Title="Exp. Year" TitleColor="Gray" />
                            </forms:Frame2>
                            <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5" Grid.Column="2">
                                <Entry Text="{Binding PaymentDetails.CardInfo.CVV, Mode=TwoWay}" Placeholder="CVV" PlaceholderColor="Gray" MaxLength="3" Keyboard="Numeric"/>
                            </forms:Frame2>
                        </Grid>
                    </StackLayout>
                </pv:PancakeView>
                <pv:PancakeView BackgroundColor="White"
                                HasShadow="True"
                                Padding="10"
                                CornerRadius="10"
                                VerticalOptions="FillAndExpand">
                    <StackLayout Orientation="Vertical">
                        <Label Text="Address Info" Style="{StaticResource labelMediumBlack}" HorizontalOptions="Center" VerticalOptions="Center"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                                <Entry Text="{Binding PaymentDetails.AddressInfo.CountryName, Mode=TwoWay}" Placeholder="Country Name*" PlaceholderColor="Gray"/>
                            </forms:Frame2>
                            <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5"  Grid.Column="1">
                                <Entry Text="{Binding PaymentDetails.AddressInfo.CityName, Mode=TwoWay}" Placeholder="City Name*" PlaceholderColor="Gray"/>
                            </forms:Frame2>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                                <Entry Text="{Binding PaymentDetails.AddressInfo.RegionName, Mode=TwoWay}" Placeholder="Region / State*" PlaceholderColor="Gray"/>
                            </forms:Frame2>
                            <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5"  Grid.Column="1">
                                <Entry Text="{Binding PaymentDetails.AddressInfo.ZIP, Mode=TwoWay}" Placeholder="Postal / Zip Code*" PlaceholderColor="Gray"/>
                            </forms:Frame2>
                        </Grid>
                        <forms:Frame2 BackgroundColor="White" BorderColor="Gray" CornerRadius="5" Padding="5,0" Margin="0,5">
                            <Entry Text="{Binding PaymentDetails.AddressInfo.StreetAddress, Mode=TwoWay}" Placeholder="Street Address*" PlaceholderColor="Gray"/>
                        </forms:Frame2>
                    </StackLayout>
                </pv:PancakeView>
                <Frame CornerRadius="30" 
                            Margin="40,10"
                            HorizontalOptions="FillAndExpand"
                            HeightRequest="40"
                            Padding="0"
                            Grid.Row="3"
                            BackgroundColor="#2EDBB5">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Pay}"/>
                    </Frame.GestureRecognizers>
                    <Label Text="{Binding PayText}" TextColor="White" FontSize="20" FontFamily="DisplayLight" VerticalOptions="Center" HorizontalOptions="Center"/>

                </Frame>
            </StackLayout>
        </ScrollView>
        <ff:CachedImage Source="waitScreen2.gif" HorizontalOptions="Center" VerticalOptions="Center" IsVisible="{Binding ShowWaitScreen}"/>
    </Grid>

</ContentPage>